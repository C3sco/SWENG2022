<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		#navbar{
		  list-style-type: none;
		  margin: 0;
		  padding: 0;
		  overflow: hidden;
		  background-color: #303030;
		}
		
		li {
		  float: left;
		  
		}
		
		#infoDocente{
			width: 70vw;
			height: 60vh;
			border: 2px outset #303030;
			margin-top: 6vh;
			margin-left: 15vw;
			background-color: lightblue;
		}
		
		#infoDocente p{
			margin-left: 2vw;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<ul id="navbar">
	       <li  id="Home">
	       	<gwt:Button ui:field = "btnHome" text="Home"
                 />
	       </li>
	       <li  id="Corso">
	       	<gwt:Button ui:field = "btnCorso" text="Corso"
                 />
	       </li>
	        <li  id="Esame">
	       	<gwt:Button ui:field = "btnEsame" text="Esame"
                 />
	       </li>
	        <li  id="Voti">
	       	<gwt:Button ui:field = "btnVoti" text="Voti"
                   />
	       </li>
	         <li  id="Logout">
	       	<gwt:Button ui:field = "btnLogout" text="Logout"
                   />
	       </li>
	    </ul>
	    <div id="infoDocente">
	    	<p>
	    		<label>Nome: </label>
	    		<gwt:Label ui:field="lblNome" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Cognome: </label>
	    		<gwt:Label ui:field="lblCognome" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Mail: </label>
	    		<gwt:Label ui:field="lblMail" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Corsi: </label>
	    		<gwt:Label ui:field="lblCorsi" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Esami: </label>
	    		<gwt:Label ui:field="lblEsami" text="Martin"></gwt:Label>
	    	</p>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 