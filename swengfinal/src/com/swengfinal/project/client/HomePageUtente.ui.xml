<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		#navbar{
		  list-style-type: none;
		  margin: 0;
		  padding: 0;
		  overflow: hidden;
		  background-color: #303030;
		}
		
		li {
		  float: left;
		  
		}
		
		#infoUtente{
			width: 70vw;
			height: 50vh;
			border: 1px solid #303030;
			margin-top: 6vh;
			margin-left: 15vw;
		}
		
		#infoUtente p{
			margin-left: 2vw;
		}
		
		#logout{
			float:right;
		}
		
		
		
		
	</ui:style>
	<g:HTMLPanel>
		<ul id="navbar">
	       <li  id="Home">
	       	<gwt:Button ui:field = "btnHome" text="Home"
                 />
	       </li>
	       <li  id="IscrizioneCorso">
	       	<gwt:Button ui:field = "btnIscrizione" text="Corsi Disponibili"
                 />
	       </li>
	        <li  id="RegistrazioneEsame">
	       	<gwt:Button ui:field = "btnRegistrazione" text="Registrazione Esame"
                 />
	       </li>
	        <li  id="ShowVoti">
	       	<gwt:Button ui:field = "btnVoti" text="Voti"
                   />
	       </li>
	         <li  id="Logout">
	       	<gwt:Button ui:field = "btnLogout" text="Logout"
                   />
	       </li>
	    </ul>
	    <div id="infoUtente">
	    	<p>
	    		<label>Nome: </label>
	    		<gwt:Label ui:field="lblNome" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Cognome: </label>
	    		<gwt:Label ui:field="lblCognome" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Mail: </label>
	    		<gwt:Label ui:field="lblMail" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Corsi iscritti: </label>
	    		<gwt:Label ui:field="lblCorsi" text="Martin"></gwt:Label>
	    	</p>
	    	<p>
	    		<label>Esami iscritti: </label>
	    		<gwt:Label ui:field="lblEsami" text="Martin"></gwt:Label>
	    	</p>
	    </div>
	</g:HTMLPanel>
</ui:UiBinder> 