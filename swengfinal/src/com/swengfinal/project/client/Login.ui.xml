<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt = 'urn:import:com.google.gwt.user.client.ui'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		#navbar{
		  list-style-type: none;
		  margin: 0;
		  padding: 0;
		  overflow: hidden;
		  background-color: #303030;
		}
		
		li {
		  float: left;
		  
		}
		
		form {
		    margin-top: 15vh;
		    margin-bottom: 4vh;
		    margin-left: 40vw;
		    width: 30vw;
		}
		
		.form-group {
		    margin-bottom: 1rem;
		    text-align:center;
		}
	</ui:style>
	<g:HTMLPanel>
		<ul id="navbar">
	       <li  id="Home">
	       	<gwt:Button ui:field = "btnHome" text="Home"
                 />
	       </li>
	       <li  id="Dipa">
	       	<gwt:Button ui:field = "btnDip" text="Dipartimenti"
                 />
	       </li>
	        <li  id="Contatti">
	       	<gwt:Button ui:field = "btnContatti" text="Contatti"
                 />
	       </li>
	        <li  id="login">
	       	<gwt:Button ui:field = "btnLogin" text="Login"
                   />
	       </li>
	        <li  id="Registrazione">
	       	<gwt:Button ui:field = "btnRegistrazione" text="Registrazione"
                   />
	       </li>
	    </ul>
		<form>
		  <div class="form-group">
		    <label for="exampleInputEmail1">Email address</label>
		    <gwt:TextBox ui:field="txtMail"></gwt:TextBox>
		  </div>
		  <div class="form-group">
		    <label for="exampleInputPassword1">Password</label>
		    <gwt:TextBox ui:field="txtPassword"></gwt:TextBox>
		  </div>
		 
		  <gwt:Button ui:field="btnSubmitLogin" text="Submit"></gwt:Button>
		</form>
	</g:HTMLPanel>
</ui:UiBinder> 